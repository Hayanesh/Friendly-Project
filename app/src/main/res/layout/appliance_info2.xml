<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        card_view:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <android.support.v7.widget.CardView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/load_blue"
                app:cardCornerRadius="0dp"
                android:fadingEdge="horizontal"
              android:elevation="3dp">



              <android.support.v7.widget.CardView
                  android:layout_width="40dp"
                  android:layout_height="match_parent"
                  android:fadingEdge="horizontal"
                  app:cardElevation="5dp"
                  app:cardBackgroundColor="@color/colourAccent"
                >
                  <android.support.v7.widget.CardView
                      android:layout_width="20dp"
                      android:layout_height="match_parent"
                      android:fadingEdge="horizontal"
                      app:cardElevation="10dp"
                      app:cardBackgroundColor="@android:color/holo_blue_dark"


                      >

                  </android.support.v7.widget.CardView>
                  </android.support.v7.widget.CardView>
          </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:elevation="5dp">

                <TextView
                    android:text="Appliances"
                    android:textSize="24sp"
                    android:typeface="sans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/app_name"
                    android:layout_gravity="right"
                    android:textColor="?attr/colorPrimaryDark"
                    android:textAllCaps="false" />

                <TextView
                    android:text="(shiftable appliance)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shift_textView"
                    android:textSize="14sp"
                    android:textColor="@color/load_pink"
                    android:typeface="sans"
                    android:textStyle="normal|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Rating"
                        android:padding="5dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_width="100dp"
                        android:typeface="normal"
                        android:allowUndo="false" />
                  <!-- <Spinner
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:contentDescription="100W"
                        android:padding="5dp"
                        android:layout_width="match_parent">

                    </Spinner>-->
                    <com.reginald.editspinner.EditSpinner
                        android:layout_weight="1.5"
                        android:id="@+id/rating"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColorHint="#aa828282"
                        android:textSize="14dp"
                        android:padding="5dp"
                        app:dropDownDrawableSpacing="15dp"
                        app:dropDownDrawableWidth="25dp"
                        app:dropDownDrawableHeight="25dp"
                        app:dropDownDrawable="@drawable/picker"
                        android:textColor="@android:color/holo_orange_light"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:typeface="monospace" />

                   <!-- <com.weiwangcn.betterspinner.library.BetterSpinner
                        android:ems="10"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"

                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:id="@+id/rating" />-->
                    <TextView

                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="W"
                        android:padding="5dp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:layout_marginTop="-11dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Quantity"
                        android:padding="5dp"
                        android:textColor="@android:color/darker_gray" />
                    <!--<Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="1"
                        android:layout_weight="1.5"
                        android:padding="5dp">

                    </Spinner>-->
                    <!--<AutoCompleteTextView
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:dropDownAnchor="@drawable/picker"
                        android:drawableRight="@drawable/picker"
                        android:ems="10"
                        android:padding="5dp"
                        android:inputType="number"

                        android:layout_width="match_parent"/>-->
                    <com.reginald.editspinner.EditSpinner
                        android:layout_weight="1.5"
                        android:id="@+id/qty"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColorHint="#aa828282"
                        android:textSize="14dp"
                        android:padding="5dp"
                        app:dropDownDrawableSpacing="15dp"
                        app:dropDownDrawableWidth="25dp"
                        app:dropDownDrawableHeight="25dp"
                        app:dropDownDrawable="@drawable/picker"
                        android:textColor="@android:color/holo_orange_light"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:typeface="monospace" />
                    <TextView

                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Nos"
                        android:padding="5dp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total watt :"
                    android:padding="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="start"
                    android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="start"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/wattage"
                        android:textSize="@dimen/fab_margin"
                        android:typeface="monospace" />
                </LinearLayout>
        </LinearLayout>
            <ImageButton
                android:id="@+id/overflow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_cancel_black_24dp"
                android:alpha="0.1"
                android:visibility="visible" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>